# Application
NODE_ENV=development
PORT=5000

# Database
# For local MySQL: mysql://username:password@localhost:3306/database_name
# For cloud MySQL: mysql://username:password@host:3306/database_name
DATABASE_URL=mysql://velvetcrumbs_user:your_password@localhost:3306/velvetcrumbs

# Session Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
SESSION_SECRET=change_this_to_a_random_32_character_string

# Email Service (Optional - Choose one)
# Option 1: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=orders@velvetcrumbs.lk
ADMIN_EMAIL=admin@velvetcrumbs.lk

# Option 2: SMTP/Nodemailer (if not using SendGrid)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Firebase (Optional - Only if using Firebase features)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Domain (for production)
DOMAIN=www.velvetcrumbs.lk
